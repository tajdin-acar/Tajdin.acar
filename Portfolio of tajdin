  function lsGet(k, fallback){
    try{ const v = JSON.parse(localStorage.getItem(k)); return v ?? fallback }catch{ return fallback }
  }
  function lsSet(k, v){ localStorage.setItem(k, JSON.stringify(v)) }
  if(!lsGet(LS_KEYS.posts)) lsSet(LS_KEYS.posts, seedPosts);
  if(!lsGet(LS_KEYS.pending)) lsSet(LS_KEYS.pending, []);

  // ===== ROUTER =====
  function route(){
    const hash = location.hash.replace('#','') || 'accueil';
    renderTabs(hash);
    const view = document.getElementById('view');
    if(hash === 'accueil') return view.innerHTML = tplAccueil();
    if(hash === 'carriere') return view.innerHTML = tplCarriere();
    if(hash === 'formation') return view.innerHTML = tplFormation();
    if(hash === 'articles') return view.innerHTML = tplArticles();
    if(hash === 'contact') return view.innerHTML = tplContact();
    view.innerHTML = tpl404();
  }

  function renderTabs(active){
    const el = document.getElementById('tabs');
    el.innerHTML = SITE_TABS.map(t => `<a href="#${t.id}" class="tab ${active===t.id?'active':''}">${t.label}</a>`).join('');
  }

