  // ===== INTERACTIONS =====
  function sendMsg(e){
    e.preventDefault();
    const fd = new FormData(e.target);
    const payload = Object.fromEntries(fd.entries());
    console.log('message', payload); // √† brancher vers un service si besoin
    e.target.reset();
    const t=document.getElementById('toast'); t.textContent='Message envoy√©'; t.classList.add('show'); setTimeout(()=>t.classList.remove('show'),1300)
  }

  function bindArticles(){
    const form = document.getElementById('postForm');
    if(!form) return;
    form.onsubmit = (e)=>{
      e.preventDefault();
      const fd = new FormData(form);
      const obj = Object.fromEntries(fd.entries());
      const pending = lsGet(LS_KEYS.pending, []);
      pending.push({ id: crypto.randomUUID(), title: obj.title.trim(), tag: obj.tag, body: obj.body.trim(), date: new Date().toISOString() });
      lsSet(LS_KEYS.pending, pending);
      form.reset();
      toast('Proposition envoy√©e');
      renderPending();
    };
    document.getElementById('adminBtn').onclick = adminLogin;
  }

  function adminLogin(){
    const key = prompt('Entrer la cl√© admin');
    if(key === ADMIN_KEY){
      document.getElementById('adminPanel').classList.remove('hidden');
      renderPending();
    } else {
      toast('Cl√© incorrecte');
    }
  }

  function renderPending(){
    const list = document.getElementById('pendingList'); if(!list) return;
    const pending = lsGet(LS_KEYS.pending, []);
    if(!pending.length){ list.innerHTML = `<div class="muted">Aucune proposition en attente.</div>`; return; }
    list.innerHTML = pending.map(p=>`
      <div class="item">
        <div class="avatar">‚è≥</div>
        <div><strong>${p.title}</strong> <span class="badge">${p.tag}</span><div class="muted">${fmtDate(p.date)}</div><p>${p.body}</p></div>
        <div style="margin-left:auto" class="row">
          <button class="btn ok" onclick="approve('${p.id}')">Approuver</button>
          <button class="btn ko" onclick="reject('${p.id}')">Rejeter</button>
        </div>
      </div>
    `).join('');
  }

  function approve(id){
    let pending = lsGet(LS_KEYS.pending, []);
    const p = pending.find(x=>x.id===id);
    pending = pending.filter(x=>x.id!==id); lsSet(LS_KEYS.pending, pending);
    const posts = lsGet(LS_KEYS.posts, []); posts.unshift(p); lsSet(LS_KEYS.posts, posts);
    toast('Article publi√©');
    route();
    renderPending();
  }
  function reject(id){
    let pending = lsGet(LS_KEYS.pending, []);
    pending = pending.filter(x=>x.id!==id); lsSet(LS_KEYS.pending, pending);
    toast('Rejet√©');
    renderPending();
  }

  function toast(msg){ const t=document.getElementById('toast'); t.textContent=msg; t.classList.add('show'); setTimeout(()=>t.classList.remove('show'),1300) }

  // ===== INIT =====
  document.getElementById('year').textContent = new Date().getFullYear();
  window.addEventListener('hashchange', ()=>{ route(); setTimeout(bindArticles,0) });
  route();
  setTimeout(bindArticles,0);
  </script>
</body>
</html>
